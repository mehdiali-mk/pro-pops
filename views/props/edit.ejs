        <div class="relative z-0 w-full mb-5">
          <div class="w-full px-24">
            <img
              src="<%= propImageUrl %>"
              alt="<%= prop.image.fileName %>"
              class="rounded-lg"
            />
          </div>
        </div>

        <div class="relative z-0 w-full mb-5">
          <input
            type="file"
            name="prop[image]"
            placeholder=" "
            class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none duration-300 top-3 z-10 origin-0 text-gray-500"
            id="uploadButton"
          />
          <label
            for="prop[image]"
            class="absolute duration-300 top-3 z-10 origin-0 text-gray-500"
            >Upload Image</label
          >
        </div>

        <div class="relative z-0 w-full mb-5">
          <input
            type="number"
            name="prop[price]"
            placeholder=" "
            required
            class="pt-3 pb-2 pl-5 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200"
            value="<%= prop.price %>"
            id="price"
          />
          <div class="absolute top-0 left-0 mt-3 ml-1 text-gray-400">₹</div>
          <label
            for="prop[price]"
            class="absolute duration-300 top-3 left-5 z-10 origin-0 text-gray-500"
            id="priceLabel"
            >Enter Price</label
          >
          <span class="text-sm text-red-600 hidden" id="error"
            >Price is required</span
          >
        </div>

        <div class="flex flex-row space-x-4">
          <div class="relative z-0 w-full mb-5">
            <input
              type="text"
              name="prop[location]"
              placeholder=" "
              id="location"
              required
              class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200"
              value="<%= prop.location %>"
            />
            <label
              for="prop[location]"
              class="absolute duration-300 top-3 z-10 origin-0 text-gray-500"
              id="locationLabel"
              >Location</label
            >
            <span class="text-sm text-red-600 hidden" id="error"
              >Location is required</span
            >
          </div>
          <div class="relative z-0 w-full">
            <input
              type="text"
              name="prop[country]"
              placeholder=" "
              id="country"
              required
              class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200"
              value="<%= prop.country %>"
            />
            <label
              for="prop[country]"
              class="absolute duration-300 top-3 z-10 origin-0 text-gray-500"
              id="countryLabel"
              >Country</label
            >
            <span class="text-sm text-red-600 hidden" id="error"
              >Country is required</span
            >
          </div>
        </div>

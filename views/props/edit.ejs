  <div class="min-h-screen p-0 sm:p-12">
    <div
      class="mx-auto max-w-md pb-7 bg-white border-0 shadow-lg sm:rounded-3xl border-b-4 border-primary"
    >
      <h1
        class="text-2xl font-bold mb-8 pt-7 pb-4 px-6 rounded-t-3xl bg-primary text-white uppercase text-center"
      >
        Edit Property
      </h1>
      <form
        id="form"
        action="/props/<%= prop._id %>?_method=PUT"
        method="post"
        novalidate
        class="px-6"
        enctype="multipart/form-data"
      >
        <div class="relative z-0 w-full mb-5">
          <input
            type="text"
            name="prop[title]"
            placeholder=""
            id="title"
            value="<%= prop.title %>"
            required
            class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200"
          />
          <label
            for="prop[title]"
            id="titleLabel"
            class="absolute duration-300 top-3 z-10 origin-0 text-gray-500"
            >Property Title</label
          >
          <span class="text-sm text-red-600 hidden" id="error"
            >Title is required</span
          >
        </div>

        <div class="relative z-0 w-full mb-5">
          <textarea
            name="prop[description]"
            id="description"
            required
            class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-black border-gray-200"
          >
<%= prop.description %></textarea
          >
          <label
            for="prop[description]"
            class="absolute duration-300 top-3 z-10 origin-0 text-gray-500"
            id="descriptionLabel"
            >Enter description</label
          >
          <span class="text-sm text-red-600 hidden" id="error"
            >Description is required</span
          >
        </div>
        <!-- 
        <div class="relative z-0 w-full mb-5">
